%h1= t('.title', :model => <%= class_name %>.human_name)

%div[current_object]
<% for attribute in attributes -%>
  %p.<%= attribute.name %>
    %strong= <%= class_name %>.human_attribute_name(:<%= attribute.name %>)
    = h current_object.<%= attribute.name %>
<% end -%>

= link_to t('<%= table_name %>.share.edit'), edit_object_path(current_object)
|
= link_to t('<%= table_name %>.share.delete'), object_path(current_object), :confirm => t('<%= table_name %>.share.delete_confirm', :model => <%= class_name %>.human_name), :method => :delete
|
= link_to t('<%= table_name %>.share.back'), objects_path
